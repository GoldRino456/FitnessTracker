@page
@model FitnessTracker.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Exercise Log</h1>

<p>
    <a button type="button" class="btn btn-success" asp-page="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LogEntryData[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogEntryData[0].ExerciseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogEntryData[0].Sets)
            </th>
            <th>
                Sub Sets
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LogEntryData) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sets)
            </td>
            <td>
                @if(item.IsTimeBasedExercise)
                {
                        @($"{item.Time} minutes");
                    }
                else
                {
                        @($"{item.Reps} reps");
                    }
            </td>
            <td>
                <a button type="button" class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a button type="button" class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a button type="button" class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
