@page
@model FitnessTracker.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogEntryData.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LogEntryData.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogEntryData.ExerciseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LogEntryData.ExerciseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogEntryData.Sets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LogEntryData.Sets)
        </dd>
        @if (Model.LogEntryData.IsTimeBasedExercise)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LogEntryData.Time)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LogEntryData.Time)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LogEntryData.Reps)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LogEntryData.Reps)
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="LogEntryData.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a button type="button" class="btn btn-primary" asp-page="./Index">Go Back</a>
    </form>
</div>
